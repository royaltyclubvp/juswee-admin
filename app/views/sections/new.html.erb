<%
   @pagetitle = 'New Section'
   @page_class = 'sections new'
%>

<h1 class='text-center'>Add New Section</h1>

<%= render partial: 'layouts/messages' %>

<div class='well well-lg'>
  <%= form_for @section do |f| %>
    <div class='form-group'>
      <%= f.label :section_name %>
      <%= f.text_field :section_name, required: true, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :image, 'Section Image' %>
      <%= f.attachment_field :image, class: 'form-control' %>
    </div>

    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>