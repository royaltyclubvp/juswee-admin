<h2 class="text-center">Log in to Jus Wee & Friends Administration</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'center-block single-column-form') do |f| %>
  <%= render partial: 'layouts/messages' %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, required: true, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", required: true, class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>

